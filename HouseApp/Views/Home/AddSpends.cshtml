

@{
    ViewData["Title"] = "AddSpends";
    var payment = ViewData["pay"];
}

<h1>AddSpends</h1>

<h4>Spends</h4>
<hr />
<div class="row" ng-controller="addspendsctrl" ng-app="houseapp">
    <div class="col-md-4" >
        @using (Html.BeginForm("AddSpends", "Home"))
        {
        <form asp-action="AddSpends">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
               
                <label  class="control-label">Forma De Pagamento</label>
                <select name="Payment">
                    <option>Select</option>
                    <option ng-repeat="pay_ in payment" value="{{pay_['p_Id']}}">
                        {{pay_['name']}}
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label  class="control-label">Description</label>
                <input  class="form-control" name="descricption" placeholder="Description" />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Valor</label>
                <input  class="form-control" name="valor" placeholder="Valor"/>
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Data</label>
                <input  type="date" name="date" class="form-control" />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">
    angular.module("houseapp", []);
    angular.module("houseapp").controller("addspendsctrl", function ($scope)
    {
        $scope.app = "houseapp";
        $scope.payment = @Html.Raw(Json.Serialize(payment));

    });

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
